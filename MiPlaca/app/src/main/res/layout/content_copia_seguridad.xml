<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_title"
        android:orientation="vertical">
            <!--

       <TextView
           android:id="@+id/textView"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:text='Copia de Seguridad "Pico y Placa"'
           android:textSize="@dimen/size_title"
           android:textAlignment="center" />

           -->
   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_marginStart="@dimen/margin_start_text"
       android:layout_marginEnd="@dimen/margin_end_text">

       <TextView
           android:id="@+id/textView4"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Crear Copia de Seguridad" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="84dp"
                android:layout_height="90dp"
                android:layout_marginTop="@dimen/margin_top_little"
                app:srcCompat="@drawable/subir" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginTop="@dimen/margin_top_little"
                android:text="Pulsa aqui para realizar una copia de seguridad en Google Drive." />

        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_little"
            android:background= "@drawable/shape"
            android:text="Crear Copia Seguridad"
            android:textColor="#ffffff"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_text"
        android:layout_marginTop="15pt"
        android:layout_marginEnd="@dimen/margin_end_text"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restaurar Copia de Seguridad" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="91dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_top_little"
                app:srcCompat="@drawable/bajar" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginTop="@dimen/margin_top_little"
                android:text="Pulsa aqui para restaurar una copia de seguridad de Google Drive." />

        </LinearLayout>

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_little"
            android:background= "@drawable/shape"
            android:text="Restaurar Copia Seguridad"
            android:textColor="#ffffff"/>
    </LinearLayout>
</LinearLayout>