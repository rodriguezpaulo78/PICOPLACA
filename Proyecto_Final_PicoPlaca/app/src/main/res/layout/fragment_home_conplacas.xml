<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_text"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/margin_end_text"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="PICO Y PLACA AREQUIPA"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12/12/2019"
            android:textAlignment="center"
            android:textSize="15dp"

            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="@dimen/margin_top_little"
                app:srcCompat="@drawable/ic_pan_tool_black_24dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="239dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginTop="@dimen/margin_top_little"
                android:text="Miercoles: \n Placas restringidas:"
                android:textSize="17dp"
                android:textStyle="italic" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorRed"
            android:text="4 - 5"
            android:textAlignment="center"
            android:textSize="60dp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Lista de Placas"

            android:textSize="20dp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/ListPlacas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        </ListView>

    </LinearLayout>

</LinearLayout>