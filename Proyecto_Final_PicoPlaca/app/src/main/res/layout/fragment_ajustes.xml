<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_title"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text='Ajustes'
            android:textSize="@dimen/size_title"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_text"
        android:layout_marginEnd="@dimen/margin_end_text"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activar Notificacion"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="@dimen/margin_top_little"
                app:srcCompat="@drawable/ic_notifications_active_black_24dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginTop="@dimen/margin_top_little"
                android:text="Pulsa aqui para activar o desactivar las notificaciones de alerta"
                android:textSize="17dp"
                android:textStyle="italic" />

        </LinearLayout>

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginTop="@dimen/margin_top_little"
            android:background="@drawable/shape"
            android:text="Ir a Notificaciones"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="@dimen/margin_start_text"
        android:layout_marginEnd="@dimen/margin_end_text"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Invitar Amigos"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="@dimen/margin_top_little"
                app:srcCompat="@drawable/ic_share_black_24dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginTop="@dimen/margin_top_little"
                android:text="Pulsa aqui para compartir esta aplicación con tus amigos"
                android:textSize="17dp"
                android:textStyle="italic" />

        </LinearLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginTop="@dimen/margin_top_little"
            android:background="@drawable/shape"
            android:text="Invitar"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_text"
        android:layout_marginEnd="@dimen/margin_end_text"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ayuda"
            android:layout_marginTop="15dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="@dimen/margin_top_little"
                app:srcCompat="@drawable/ic_help_black_24dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginTop="@dimen/margin_top_little"
                android:text="Pulsa aqui para obtener informacion de la aplicación"
                android:textSize="17dp"
                android:textStyle="italic" />

        </LinearLayout>

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginTop="@dimen/margin_top_little"
            android:background="@drawable/shape"
            android:text="Ayuda"
            android:textColor="#ffffff" />

    </LinearLayout>


</LinearLayout>